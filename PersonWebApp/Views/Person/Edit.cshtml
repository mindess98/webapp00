@using PersonApplicationDll.Entities
@model EditPersonViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form method="post" action="/Person/Edit">
    <input type="hidden" value="@Model.Person.Id" name="id" />
    <div class="form-group">
        <label for="name">Name</label>
        <input id="name" type="text" class="form-control" placeholder="Type name" name="name" value="@Model.Person.Name" />
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select class="form-control" id="status" name="status.id">
            @foreach (var status in Model.Statuses)
            {
                <option value="@status.Id"@(Model.Person.Status.Id == status.Id ? "selected" : "")>@status.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-default">Edit user</button> 
</form>
<hr/>
<a href="/Person/Index" class="btn btn-default">Go back</a>
